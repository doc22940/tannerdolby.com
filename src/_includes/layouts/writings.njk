---
tagList: 
    - html
    - javascript
    - eleventy
    - nunjucks
    - security
    - shell
---

<!DOCTYPE html>
<html dir="ltr" lang="en">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>{{ site.doc_metadata.writing.title }}</title>
        <meta name="author" content="{{ site.page_info.full_name }}">
        <meta name="description" content="{{ site.doc_metadata.writing.posts }}">
        <meta name="keywords" content="{{ site.doc_metadata.keywords }}">
        <!-- Twitter Metadata -->
        <meta name="twitter:card" content="{{ site.doc_metadata.twitter.card }}">
        <meta name="twitter:title" content="{{ site.doc_metadata.writing.title }}">
        <meta name="twitter:creator" content="{{ site.doc_metadata.twitter.creator }}">
        <meta name="twitter:site" content="{{ site.doc_metadata.twitter.site }}">
        <meta name="twitter:desc" content="{{ site.doc_metadata.writing.posts }}">
        <meta name="twitter:image" content="{{ site.doc_metadata.twitter.image }} ">
        <!-- OpenGraph Metadata -->
        <meta name="og:title" content="{{ site.doc_metadata.writing.title }}">
        <meta name="og:type" content="{{ site.doc_metadata.open_graph.type }}">
        <meta name="og:url" content="https://tannerdolby.com{{ page.url }}">
        <meta name="og:img" content="{{ site.doc_metadata.open_graph.image }}">
        <meta name="og:description" content="{{ site.doc_metadata.writing.posts }}">
        <link rel="canonical" href="https://tannerdolby.com{{ page.url }}">
        <link rel="apple-touch-icon" sizes="180x180" href="/images/apple-touch-icon.png">
        <link rel="icon" type="image/png" sizes="32x32" href="/images/favicon-32x32.png">
        <link rel="icon" type="image/png" sizes="16x16" href="/images/favicon-16x16.png">
        {% set css %}
            {% include "css/style.css" %}
        {% endset %}
        <style>
            {{ css | cssmin | safe }}
        </style>
    </head>
    <body>
        <a href="#main-writing" class="skip-link">Skip to main content</a>
        {% include "layouts/nav.njk" %}
        <main class="main-container" id="main-writing">
            <header class="banner-container search-box">
                <h1 class="h1">{{ title }}</h1>
                <div class="search-style">
                    <a href="/search/" class="contain">
                        <svg version="1.1" id="search_svg" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" viewBox="0 0 511.999 511.999" xml:space="preserve">
                        <g>
                            <g>
                                <path d="M508.874,478.708L360.142,329.976c28.21-34.827,45.191-79.103,45.191-127.309c0-111.75-90.917-202.667-202.667-202.667
                                    S0,90.917,0,202.667s90.917,202.667,202.667,202.667c48.206,0,92.482-16.982,127.309-45.191l148.732,148.732
                                    c4.167,4.165,10.919,4.165,15.086,0l15.081-15.082C513.04,489.627,513.04,482.873,508.874,478.708z M202.667,362.667
                                    c-88.229,0-160-71.771-160-160s71.771-160,160-160s160,71.771,160,160S290.896,362.667,202.667,362.667z"/>
                            </g>
                        </g>
                        </svg>
                    </a>
                </div>
            </header>
            <div class="main-content">
                <ul class="my-posts">
                    {% for post in collections.posts | reverse %}
                    <li>
                        <article class="post" data-post-title="{{ post.data.title }}" data-tags="[{{ post.data.tags | stringify }}]">
                            <h2 class="h3" style="margin-bottom: .5rem;"><a class="post-title-link" href="{{ post.url }}">{{ post.data.title }}</a></h2>
                            <p class="date">Posted on&nbsp;<time datetime="{{ post.data.datetime | date('YYYY-MM-DD') }}">{{ post.data.datetime | date('MMMM DD, YYYY') }}</time>&nbsp;&bull; tagged with&nbsp;{% for tag in post.data.tags %}<a style="margin-right: .35rem;" href="/writing?filter={{ tag }}">#{{ tag }}</a>{% endfor %}</p>
                            <p class="preview">{{ post.data.preview }}</p>
                        </article>
                    </li>
                    {% endfor %}
                </ul>
                <h3 style="margin-top: 3rem;">Filter Posts by Tag</h3>
                <ul class="tags-list" style="display: flex; justify-content: flex-start; align-items: center; flex-wrap: wrap; padding-left: 0; list-style: none; margin: .5rem auto;">
                    <li style="display: flex; flex-wrap: wrap; align-items: center;">{% for tag in tagList %}<a class="post-label" href="/writing?filter={{ tag }}">{{ tag }}</a>{% endfor %}</li>
                </ul>
            </div>
        </main>
        {% include "layouts/footer.njk" %}
        {% set js %}
            {% include "js/filter-posts.js" %}
            {% include "js/search.js" %}
        {% endset %}
        <script>
            {{ js | jsmin | safe }}
        </script>
    </body>
</html>